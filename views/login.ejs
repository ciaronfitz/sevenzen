<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>SEVENZEN</title>
  <link rel="icon" href="/sevenzen.ico" sizes="any" type="image/svg+xml">
  <link rel="stylesheet" href="/mystyles.css">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link rel="icon" type="image/x-icon" href="/sevenzen.svg">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body>
  <%- include('header'); %>
    <% if (loginSuccessful==false ) { %>
      <div class="alert alert-danger" role="alert">Login failed. Please try again.</div>
      <% } %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
        <main>
          <div class="container-fluid pb-3">
            <form method="post" action="/login">

              <div class="row mb-3 ml-3 mr-3 pt-3 pb-3">
                <label for="inputEmail3" class="form-label">Email</label>
                <input type="email" name="useremail" class="form-control" id="inputEmail3">
                <span id="emailerror"></span>
              </div>

              <div class="row mb-3 ml-3 mr-3 pt-3 pb-3">
                <label for="inputPassword5" class="form-label">Password</label>
                <input type="password" name="userpass" id="inputPassword5" class="form-control"
                  aria-describedby="passwordHelpBlock">
                <span id="passworderror"></span>
              </div>

              <div>
                <button type="submit" class="btn btn-primary  ml-3 mr-3 pt-3 pb-3">Sign in</button>
              </div>
          </div>
          </form>
          </div>
        </main>

        <script>
          $(document).ready(function () {
            $("form").submit(function (event) {
              var email = $("#inputEmail3").val();
              var password = $("#inputPassword5").val();
              if (email.length < 1) {
                $("#emailerror").text("Please enter your email address.")
                  .css('color', 'red')
                  .show();
                event.preventDefault();
              }
              if (password.length < 1) {
                $("#passworderror").text("Please enter your password.")
                  .css('color', 'red')
                  .show();
                event.preventDefault();
              }
            });
          });
        </script>
</body>